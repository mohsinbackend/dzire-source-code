        <!-- Begin AlertMgs -->
  
<%
var flash = getMessages();
if(flash.info){ %>

  
  <div class="alert alert-info"> 
    <button aria-hidden="true" data-dismiss="alert" class="close" type="button"><i class="icon-cross"></i></button>
    <span class="vd_alert-icon"><i class="fa fa-info-circle vd_blue"></i></span>
    <strong>Info : </strong> <a href="#" class="alert-link"><%= flash.info %></a>
  </div>

<% }else if(flash.error){ %>

  <div class="alert alert-danger"> 
    <button aria-hidden="true" data-dismiss="alert" class="close" type="button"><i class="icon-cross"></i></button>
    <span class="vd_alert-icon"><i class="fa fa-exclamation-circle vd_red"></i></span>
    <strong>Error :</strong> <a href="#" class="alert-link"><%= flash.error %></a> 
  </div>

<% }else if(flash.success){ %>

  <div class="alert alert-success"> 
    <button aria-hidden="true" data-dismiss="alert" class="close" type="button"><i class="icon-cross"></i></button>
    <span class="vd_alert-icon"><i class="fa fa-check-circle vd_green"></i></span>
    <strong>Success : </strong>  
    <a href="#" class="alert-link"><%= flash.success %></a>. 
  </div>

<% } %>
<!-- Begin AlertMgs -->

  
  
    
  
  
  
  
  
  
  
  
  
  
            <!-- Begin Content -->
  
              <div class="vd_content-section clearfix">
              <div class="panel widget light-widget">
                <div class="panel-heading no-title"> </div>
                <div class="panel-body">
                  <h2 class="mgbt-xs-20">Create User Form</h2>


                  

                  <form action="<%= url+'/admin/user/store' %>" method="POST" enctype="multipart/form-data" class="form-horizontal"  role="form" id="register-form" novalidate="novalidate">
                    <div class="alert alert-danger vd_hidden">
                      <button type="button" class="close" data-dismiss="alert" aria-hidden="true"><i class="icon-cross"></i></button>
                      <span class="vd_alert-icon"><i class="fa fa-exclamation-circle vd_red"></i></span><strong>Oh snap!</strong> Change a few things up and try submitting again. </div>
                    <div class="alert alert-success vd_hidden">
                      <button type="button" class="close" data-dismiss="alert" aria-hidden="true"><i class="icon-cross"></i></button>
                      <span class="vd_alert-icon"><i class="fa fa-check-circle vd_green"></i></span><strong>Well done!</strong>. </div>
                    

                      
                      <div class="form-group">
                        <div class="col-md-12">
                          <label class="control-label  col-sm-2">Image <span class="vd_red">*</span></label>
                          <div id="first-name-input-wrapper" class="controls col-sm-9">
                            <% if(flash.image_err){ %><small style="color:red;"><%= flash.image_err %></small>  <% } %>
                            <input name="image" type="file" id="ImageInput" placeholder="John" class="width-60 required"   required="">
                          </div>
                        </div>
                      </div>  

               
                      <div class="form-group">
                        <div class="col-md-12">                        
                          <label class="control-label  col-sm-2">First Name <span class="vd_red">*</span></label>
                          <% if(flash.fname_err){ %>&nbsp;&nbsp;&nbsp;&nbsp;<small style="color:red;"><%= flash.fname_err %></small>  <% } %>
                          <div id="first-name-input-wrapper" class="controls col-sm-9">
                          <input name="fname" value="<%if(flash.fname){ %><%= flash.fname %><%}%>" type="text" placeholder="First name" class="width-60 required"  id="NameInput" required="">
                          </div>  
                        </div>
                      </div>  
   
                      
                      <div class="form-group">
                        <div class="col-md-12">                          
                          <label class="control-label  col-sm-2">Last Name <span class="vd_red">*</span></label>
                          <% if(flash.lname_err){ %>&nbsp;&nbsp;&nbsp;&nbsp;<small style="color:red;"><%= flash.lname_err %></small>  <% } %>
                          <div id="last-name-input-wrapper" class="controls col-sm-9">
                            <input name="lname" value="<% if(flash.lname){ %> <%= flash.lname %>   <% } %>" type="text" placeholder="Last name" class="width-60 required"  id="NameInput" required="">
                          </div>
                        </div>
                      </div>  
    
                      
                      <div class="form-group">
                        <div class="col-md-12">                                             
                          <label class="control-label  col-sm-2">User Name <span class="vd_red">*</span></label>
                          <% if(flash.uname_err){ %>&nbsp;&nbsp;&nbsp;&nbsp;<small style="color:red;"><%= flash.uname_err %></small>  <% } %>
                          <div id="user-name-input-wrapper" class="controls col-sm-9">
                            <input name="uname" value="<% if(flash.uname){ %> <%= flash.uname %><%}%>" type="text" placeholder="User name" class="width-60 required"  id="NameInput" required="">
                          </div>
                        </div>
                      </div>  
   
   
                      <div class="form-group">
                        <div class="col-md-12">                                             
                          <label class="control-label  col-sm-2">Phone <span class="vd_red">*</span></label>
                          <% if(flash.phone_err){ %>&nbsp;&nbsp;&nbsp;&nbsp;<small style="color:red;"><%= flash.phone_err %></small>  <% } %>
                          <div id="phone-name-input-wrapper" class="controls col-sm-9">
                            <input name="phone" value="<%if(flash.phone){%><%=flash.phone%><%}%>" type="text" placeholder="Phone Number" class="width-60 required"  id="PhoneInput" required="">
                          </div>
                        </div>
                      </div>  
   
                  
                      <div class="form-group">
                        <div class="col-md-12">                                             
                          <label class="control-label  col-sm-2">Email <span class="vd_red">*</span></label>
                          <% if(flash.email_err){ %>&nbsp;&nbsp;&nbsp;&nbsp;<small style="color:red;"><%= flash.email_err %></small>  <% } %>
                          <div id="email-name-input-wrapper" class="controls col-sm-9">
                            <input name="email" value="<%if(flash.email){%><%=flash.email%><%}%>" type="text" placeholder="Email Address" class="width-60 required"  id="EmailInput" required="">
                          </div>
                        </div>
                      </div>  
   
  
                      <div class="form-group">
                        <div class="col-md-12">
                          <label class="control-label col-sm-2">Gender<span class="vd_red">*</span></label>
                          <div id="email-input-wrapper" class="controls col-sm-6">
                            <% if(flash.gender_err){ %> <small style="color:red;"><%= flash.gender_err %></small>  <% } %>
                            <select name="gender" id="StatusSelect" >
                              <option value="" >Select Gender</option>
                              <option <% if(flash.gender && flash.gender=='1'){ %> selected="true" <% } %> value="1" >Male</option>
                              <option <% if(flash.gender && flash.gender=='0'){ %> selected="true" <% } %> value="0" >Female</option>
                            </select>
                          </div>
                        </div>
                      </div>
                      

    
                      <div class="form-group">
                        <div class="col-md-12">
                          <label class="control-label col-sm-2">Status<span class="vd_red">*</span></label>
                          <div id="email-input-wrapper" class="controls col-sm-6">
                            <% if(flash.status_err){ %> <small style="color:red;"><%= flash.status_err %></small>  <% } %>
                            <select name="status" id="StatusSelect" >
                              <option value="" >Select Status</option>
                              <option <% if(flash.status && flash.status=='1'){ %> selected="true" <% } %> value="1" >Active</option>
                              <option <% if(flash.status && flash.status=='0'){ %> selected="true" <% } %> value="0" >Deactive</option>
                            </select>
                          </div>
                        </div>
                      </div>
    
  
                     
  
  
                    <div id="vd_login-error" class="alert alert-danger hidden"><i class="fa fa-exclamation-circle fa-fw"></i> Please fill the necessary field </div>
                    <div class="form-group">
                      <div class="col-sm-2"></div>
                      
                      
                      <div class="col-md-6 mgbt-xs-10 mgtp-20">
                        
  
                        <div class="mgtp-10">
                          <button class="btn vd_bg-green vd_white" type="submit" id="submit-register" name="submit-register">Store</button>
                        </div>
                      </div> 
  
  
                      <div class="col-md-12 mgbt-xs-5"> </div>
                    </div>
                  </form>
                </div>
              </div>
