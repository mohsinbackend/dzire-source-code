<!-- Begin AlertMgs -->
  
<%
var flash = getMessages();
if(flash.info){ %>

  
  <div class="alert alert-info"> 
    <button aria-hidden="true" data-dismiss="alert" class="close" type="button"><i class="icon-cross"></i></button>
    <span class="vd_alert-icon"><i class="fa fa-info-circle vd_blue"></i></span>
    <strong>Info : </strong> <a href="#" class="alert-link"><%= flash.info %></a>
  </div>

<% }else if(flash.error){ %>

  <div class="alert alert-danger"> 
    <button aria-hidden="true" data-dismiss="alert" class="close" type="button"><i class="icon-cross"></i></button>
    <span class="vd_alert-icon"><i class="fa fa-exclamation-circle vd_red"></i></span>
    <strong>Error :</strong> <a href="#" class="alert-link"><%= flash.error %></a> 
  </div>

<% }else if(flash.success){ %>

  <div class="alert alert-success"> 
    <button aria-hidden="true" data-dismiss="alert" class="close" type="button"><i class="icon-cross"></i></button>
    <span class="vd_alert-icon"><i class="fa fa-check-circle vd_green"></i></span>
    <strong>Success : </strong>  
    <a href="#" class="alert-link"><%= flash.success %></a>. 
  </div>

<% } %>
<!-- Begin AlertMgs -->

  
  
  
  
            <!-- Begin Content -->
  
              <div class="vd_content-section clearfix">
              <div class="panel widget light-widget">
                <div class="panel-heading no-title"> </div>
                <div class="panel-body">
                  <h2 class="mgbt-xs-20">Email Template</h2>


                    



                  <form action="/admin/setting/emailtemplate-register" method="POST" class="form-horizontal"  role="form" id="register-form" novalidate="novalidate">
                      

                    
            

              
              
                            <div class="form-group">
                                <div class="col-md-12">                
                                    <label style="text-align:left;" class="control-label  col-sm-2">Title<span class="vd_red">*</span></label>
                                    <% if(flash.register_title_err){ %>&nbsp;&nbsp;&nbsp;&nbsp;<small style="color:red;"><%= flash.register_title_err %></small>  <% } %>
                                    <div  class="controls col-sm-9">
                                        <input name="register_title" value="<%= register.title %>" type="text" /> 
                                    </div>    
                                </div>
                            </div>  
                

                        
                        <div class="form-group">
                            <div class="col-md-12">          
                                
                                <label style="text-align:left;" class="control-label  col-sm-2">Template<span class="vd_red">*</span></label>
                                <% if(flash.register_template_err){ %>&nbsp;&nbsp;&nbsp;&nbsp;<small style="color:red;"><%= flash.register_template_err %></small>  <% } %>
                                <div  class="controls col-sm-9">
                                <textarea name="register_template" ><%= register.template %></textarea>
                                </div>
                            </div>
                        </div>  


                    


    
  
                    <div class="form-group">
                      <div class="col-sm-2"></div>
                      
                      
                      <div class="col-md-6 mgbt-xs-10 mgtp-20">
                        
  
                        <div class="mgtp-10">
                          <button class="btn vd_bg-green vd_white" type="submit"  >Update</button>
                        </div>
                      </div> 
  
  
                      <div class="col-md-12 mgbt-xs-5"> </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
  
          
  
